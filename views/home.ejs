<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<form action="/create" method="post">
    <input type="text" name="name" placeholder="enter name" required>
    <input type="number" name="phoneNumber" placeholder="enter phone no" required>
    <input type="number" name="age" placeholder="enter age" required>
    <input type="text" name="relationship" placeholder="enter relationship" required>
    <label for="disease">
        Select the diseases here:
      </label>
      <select multiple name="disease" id="disease">
        <option>Arthritis</option>
        <option>Asthma</option>
        <option>Cancer</option>
        <option>Cystic Fibrosis</option>
        <option>Diabetes </option>
        <option>ALS</option>
        <option>stroke</option>
        <option>Osteoporosis</option>
        <option>Obesity</option>
      </select>
    <button type="submit">Add Details</button>
</form>

<h1 class="heading">Family Tree(Safwaan)</h1>

<div class="container">
    <% for(let i = 0;i<users.length;i++){ %>
        <div class="outer">
            <div class="inner">
                <% if(users[i].disease.length == 0){ %>
                    <h3 class="show">name: <%= users[i].name %> <span>Diseases: None</span></h3>
                <% }else{ %>
                    <h3 class="show">name: <%= users[i].name %> <span>Diseases: <%= users[i].disease %></span></h3>
                <% } %>
            <div class="pop-up">
            <h3>phoneNumber: <%= users[i].phoneNumber %></h3>
            <h3>age: <%= users[i].age %></h3>
            <h3>relationship: <%= users[i].relationship %></h3>
            </div>
            </div>
            <a href="/delete/?id=<%= users[i]._id %>">
                <i class="fas fa-user-times"></i>
            </a>
            <a href="/update/?id=<%= users[i]._id %>">
                <i class="fa-solid fa-wrench"></i>
            </a>  
        </div>
    <% } %>
</div>